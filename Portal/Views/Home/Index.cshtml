@model IEnumerable<PatientViewModel>

@{
    ViewData["Title"] = "Patient List";
}

<button type="button" class="btn btn-success" asp-action="New" asp-controller="Home" onclick="location.href='@Url.Action("New", "Home")'">
    Add Patient
</button>

<div class="container mt-5">
    <h2 class="mb-4">Patient List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Gender</th>
                <th scope="col">City</th>
                <th scope="col">Postal Code</th>
                <th scope="col">Ward</th>
                <th scope="col">Bed</th>
                <th scope="col">Unit</th>
                <th scope="col">Admission Date</th>
                <th scope="col">Discharged Date</th>
                <th scope="col">Treating Doctor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <th scope="row">@patient.Id</th>
                    <td>@patient.Name</td>
                    <td>@patient.DateOfBirth</td>
                    <td>@patient.Gender</td>
                    <td>@patient.City</td>
                    <td>@patient.PostalCode</td>
                    <td>@patient.Ward</td>
                    <td>@patient.Bed</td>
                    <td>@patient.Unit</td>
                    <td>@patient.AdmissionDate</td>
                    <td>@patient.DischargedDate</td>
                    <td>@patient.TreatingDoctor</td>
                </tr>
            }
        </tbody>
    </table>
</div>
